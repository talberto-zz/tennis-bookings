# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Single endpoint for serving AngularJS
GET     /                           @controllers.Application.index

# Resource booking
GET		/bookings					@controllers.BookingsController.list
POST	/bookings					@controllers.BookingsController.create
DELETE	/bookings/:id		        @controllers.BookingsController.delete(id: Long)
PUT		/bookings/:id				@controllers.BookingsController.update(id: Long)


# Screenshots
GET     /screenshots/:file          @controllers.ScreenshotsController.image(file: String)